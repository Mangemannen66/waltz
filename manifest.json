{
  "name": "Waltz",
  "version": "0.1.1",
  "manifest_version": 2,
  "description": "Forget About Your Accounts",
  "background": {
    "scripts": [
      "/js/vendor/rsvp.js",
      "/js/vendor/pubnub.js",
      "/js/crypto.js", 
      "/js/storage.js",
      "/js/vendor/aes.js",
      "/js/delegate.js"
    ]
  },
  "content_scripts": [{
    "matches": ["*://*/*"],
    "js": ["js/vendor/jquery.min.js", "/js/waltz.js"],
    "css": ["/css/waltz.css"]
  }],
  "permissions": [
  	"*://*/*",
    "storage",
    "cookies",
    "tabs",
    "notifications"
  ],
  "icons": {
    "16": "/img/waltz-16.png",
    "48": "/img/waltz-48.png",
    "128": "/img/waltz-128.png"
  },
  "options_page": "html/options.html",
  "homepage_url": "http://waltz.io",
  "web_accessible_resources": [
    "img/waltz-128.png",
    "img/waltz-full.png",
    "img/pencil.png",
    "img/x.png"
  ]
}
