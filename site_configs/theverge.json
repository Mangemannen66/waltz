{
    "*://*.theverge.com/*": {
        "name": "The Verge",
        "logout": {
            "cookies": ["_session_id"]
        },
        "login": {
            "urls": ["http://www.theverge.com/"],
            "formURL": "http://www.theverge.com/chorus_auth/initiate_password_auth",
            "method": "POST",
            "usernameField": "username",
            "passwordField": "password",
            "check": "a[href='http://www.theverge.com/account/logout']"
        }
    }
}
