{
    "*://*.craigslist.org/*": {
        "name": "Craigslist",
        "logout": {
            "cookies": ["cl_session"]
        },
        "login": {
            "urls": ["https://accounts.craigslist.org/"],
            "formURL": "https://accounts.craigslist.org/login",
            "formOnly": true,
            "method": "POST",
            "usernameField": "inputEmailHandle",
            "passwordField": "inputPassword",
            "hasHiddenInputs": true,
            "check": "a:contains('log out'), a:contains('logout')"
        }
    }
}
